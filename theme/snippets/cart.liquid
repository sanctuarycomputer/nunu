<div data-activatable-toggleable-item="cart" class="Cart z-cart bg-color-white col-12 md:col-6 lg:col-4">
  <div data-activatable-deactivator="cart" class="Cart__header pointer px_625 md:px1_25 uppercase sans-serif text-right text-nav flex items-center justify-end">
    CLOSE
  </div>
  <div class="Cart__inner border-thick-black overflow-y-scroll">
    {% if cart.item_count > 0 %}
      <form action="/cart" method="post" novalidate>
        {% for item in cart.items %}
          {% render 'cart-item', item: item %}  
      {% endfor %}
        <div class="Cart__checkout-container bg-color-white border-thick-black serif-sm flex justify-between p_625">
          <p>{{ cart.total_price | money }}</p>
          <button to="TO-DO" aria-label={{ 'snippets.cart.checkout_button.aria_label' | t }} class="button--style-no-style serif-sm uppercase" type="submit" name={{ 'snippets.cart.checkout_button.name' | t }}>{{ 'snippets.cart.checkout_button.text' | t }} </button>
        </div>
      </form>
    {% else %}
      Cart is empty
    {% endif %}
  </div>
</div>