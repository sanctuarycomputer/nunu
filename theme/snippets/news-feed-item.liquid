<a href="{{ link }}" target="_blank" rel="noreferrer noopener" class="NewsFeedItem flex items-center py1_25 md:py_75 xs:pr0 border-thick-bottom-black">
  <div class="flex col-2 lg:col-1 md:mx_75">
    <img class="NewsFeedItem__image fit-contain w100 h100" src="{{ image_src }}" alt="{{ image_alt }}"/>
  </div>
  <div class="flex items-center justify-between col-10 lg:col-11">
    <span class="NewsFeedItem__body serif px1 col-9 md:col-10">{{ body }}</span>
    <span class="NewsFeedItem__cta-label sans-serif md:pl2 col-3 md:col-2 flex flex-col items-end">{{ cta_label }}</span>
  </div>
</a>
