// Serif
@font-face {
  font-family: "ITCGaramondStd-LtCond";
  font-style: normal;
  font-weight: 400;
  src: url('{{ "ITCGaramondStd-LtCond.otf" | asset_url }}');
  src: url('{{ "ITCGaramondStd-LtCond.woff2" | asset_url }}') format("woff2"),
    url('{{ "ITCGaramondStd-LtCond.woff" | asset_url }}') format("woff");
}

// Sans-Serif
@font-face {
  font-family: "GT-Zirkon-Light";
  font-style: normal;
  font-weight: 400;
  src: url('{{ "GT-Zirkon-Light.otf" | asset_url }}');
  src: url('{{ "GT-Zirkon-Light.woff2" | asset_url }}') format("woff2"),
    url('{{ "GT-Zirkon-Light.woff" | asset_url }}') format("woff");
}
